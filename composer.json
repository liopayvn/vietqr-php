{
    "name": "liopay/vietqr",
    "description": "Production-ready PHP library for building and parsing VietQR (NAPAS FastFund 24/7 IBFT) QR codes compliant with EMVCo 1.5.2 specification.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://liopay.vn",
    "keywords": [
        "vietqr",
        "napas",
        "emvco",
        "qr-code",
        "qr-payment",
        "fastfund",
        "ibft",
        "payment",
        "bank-transfer",
        "vietnam",
        "vietnamese-payment",
        "qr-generator",
        "qr-parser"
    ],
    "autoload": {
        "psr-4": {
            "Liopay\\VietQR\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Liopay\\VietQR\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Liopay",
            "email": "contact@liopay.vn"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.87",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "php-cs-fixer check",
        "cs-fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
