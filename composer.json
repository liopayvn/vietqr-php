{
    "name": "liopay/vietqr",
    "description": "Thư viện PHP giúp tạo và phân tích mã QR VietQR (NAPAS FastFund 24/7 IBFT) tuân theo chuẩn EMVCo.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://liopay.vn",
    "keywords": [
        "vietqr",
        "napas",
        "emvco",
        "qr",
        "fastfund",
        "ibft",
        "chuyển tiền",
        "ngân hàng",
        "liopay",
        "vietnam"
    ],
    "autoload": {
        "psr-4": {
            "Liopay\\VietQR\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Liopay\\VietQR\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Liopay",
            "email": "contact@liopay.vn"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "endroid/qr-code": "^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.87",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "php-cs-fixer check",
        "cs-fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
